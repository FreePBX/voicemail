<module>
	<rawname>voicemail</rawname>
	<repo>standard</repo>
	<name>Voicemail</name>
	<version>17.0.5.8</version>
	<publisher>Sangoma Technologies Corporation</publisher>
	<licenselink>https://www.gnu.org/licenses/gpl-3.0.txt</licenselink>
